@using ModelsDAL
@using MyWebApplication.Extensions
@model IEnumerable<ModelsDAL.User>

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Login)*@
            @Html.SortLink("Логин", "UserName", "List", "User", null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.FIO)*@
            @Html.SortLink("ФИО", "FIO", "List", "User", null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.CreationDate)*@
            @Html.SortLink("Дата создания", "CreationDate", "List", "User", null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.SortLink("Email", "Email", "List", "User", null)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Age)*@
            @Html.SortLink("Возраст", "Age", "List", "User", null)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @if (item.Avatar != null)
                {
                    <img src="@Url.Action("GetAvatar", new { id = item.Id })" style="width:24px;" />
                    @Html.ActionLink("Скачать", "GetAvatar", new { id = item.Id }, null)
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table> 